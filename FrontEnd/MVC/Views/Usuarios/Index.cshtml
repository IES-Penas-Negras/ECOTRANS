@using IESPeniasNegras.Ecotrans.Nucleo.Acciones.Usuarios
@model  ListarUsuarioResponse

<h2>Listado de Usuarios</h2>
@Html.ActionLink("Nuevo Usuario", "Nuevo", "Usuarios", null, new { @class="btn btn-info" })
@if (Model.Elementos.Count == 0)
{
    <h3>UPPS .... Lo sentimos, no encontramos ning√∫n usuario  registrada</h3>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Usuario</th>
                <th>Titulo</th>
                <th>Descripcion</th>
                <th>FechaInicio</th>
                <th>FechaFinal</th>
            </tr>
        </thead>

        <tbody>
            <!---Tenemos el listado, los elementos pero no los enlaces--->

            @foreach(var usuario in Model.Elementos)
            {
                <tr>
                    <td>@usuario.Id</td>
                    <td>@Html.ActionLink(@usuario.Id, "Detalles", new {usuario= usuario.Id})</td>
                    <td>@usuario.ProvinciaId</td>
                    <td>@usuario.CiudadId</td>
                    <td>@usuario.Direccion1</td>
                    <td>@usuario.Direccion2</td>
                    <td>@usuario.CodigoPostal</td>

                </tr>
            }
        </tbody>
    </table>
}
